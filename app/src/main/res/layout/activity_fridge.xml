<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.kitchen.fridge">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fridge/Freezer Temperature Settings"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fridge Temperature Settings"
        android:id="@+id/fridge"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Freezer Temperature Settings"
        android:id="@+id/freezer"
        android:layout_below="@id/fridge" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature Settings"
        android:id="@+id/tempSettings"
        android:layout_below="@+id/freezer"
        android:layout_alignParentStart="true" />



</RelativeLayout>
